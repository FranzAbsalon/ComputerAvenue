<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Ecommerce: Account</title>
    <link rel="icon" href="../../public/imgs/nodejs-logo.png" />
    <%- include ("./partials/_head") %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body class="app">
    <%- include ("./partials/_nav") %>
    <div class="app-wrapper">
      <div class="app-content container pt-3 p-md-3 p-lg-4">
        <div class="container">
          <h1 class="app-page-title">Account Settings</h1>
            <div class="row gy-4 ">
                <div class="col-12 col-lg-12">
                    <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
                        <div class="app-card-body px-4 w-100">
                            <% if ( typeof (alert) != "undefined" && alert) { %>
                                <div
                                 class="alert alert-danger alert-dismissible w-100 fade show"
                                 role="alert"
                                 >
                                     <%= alert %>
                                 <button
                                     type="button"
                                     class="btn-close"
                                     data-bs-dismiss="alert"
                                     aria-label="Close"
                                     >
                                     </button>
                                 </div>
                             <% } %>
                             <% if ( typeof (alertSuccess) != "undefined" && alertSuccess) { %>
                                 <div
                                     class="alert alert-success alert-dismissible w-100 fade show"
                                     role="alert"
                                 >
                                     <%= alertSuccess %>
                                     <button
                                     type="button"
                                     class="btn-close"
                                     data-bs-dismiss="alert"
                                     aria-label="Close"
                                     >
                                     </button>
                                 </div>
                             <% } %>
                            <% if (typeof (result) != "undefined") { %>
                                <% result.forEach(r => { %>
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Full Name</strong></div>
                                                <div class="item-data" style="text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;"><%= r.fullname %></div>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Email</strong></div>
                                                <div class="item-data" style="text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;"><%= r.username %></div>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Address</strong></div>
                                                <div class="item-data" style="text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;"><%= r.addr %></div>
                                            </div><!--//col-->
                                            <div class="col text-end">
                                                <a 
                                                    class="btn-sm app-btn-secondary"  
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#changeAddr<%= r.id %>"
                                                    style="cursor: pointer;">
                                                Change
                                                </a>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Encrypted Password</strong></div>
                                                <div class="item-data" style="text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;">
                                                    <%= r.password %>
                                                </div>
                                            </div><!--//col-->
                                            <div class="col text-end">
                                                <a 
                                                    class="btn-sm app-btn-secondary"  
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#changePassword<%= r.id %>"
                                                    style="cursor: pointer;">
                                                Change
                                                </a>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                </div><!--//app-card-body-->
                                <div class="app-card-footer p-4 mt-auto">
                                </div><!--//app-card-footer-->
                                <div
                                    class="modal fade"
                                    id="changeAddr<%= r.id %>"
                                    tabindex="-1"
                                    aria-labelledby="changeAddrLabel"
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="changeAddrLabel">
                                                Change Address: 
                                            </h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"
                                            ></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" class="w-100">
                                                <input type="hidden" name="user_id" value="<%= r.id %>">
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="text"
                                                    class="form-control"
                                                    id="new_addr"
                                                    name="new_addr"
                                                    value="<%= r.addr %>"
                                                    required
                                                    />
                                                    <label for="new_addr">Address</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    Close
                                                </button>
                                                <input type="submit" name="update" class="btn btn-primary text-white" value="Update">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div
                                    class="modal fade"
                                    id="changePassword<%= r.id %>"
                                    tabindex="-1"
                                    aria-labelledby="changePasswordLabel"
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="changePasswordLabel">
                                                Change Password: 
                                            </h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"
                                            ></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" class="w-100">
                                                <input type="hidden" name="user_id" value="<%= r.id %>">
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="cur_pwd"
                                                    name="cur_pwd"
                                                    required
                                                    />
                                                    <label for="cur_pwd">Current Password</label>
                                                </div>
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="new_pwd"
                                                    name="new_pwd"
                                                    required
                                                    />
                                                    <label for="new_pwd">New Password</label>
                                                </div>
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="con_new_pwd"
                                                    name="con_new_pwd"
                                                    required
                                                    />
                                                    <label for="con_new_pwd">Confirm New Password</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    Close
                                                </button>
                                                <input type="submit" name="update" class="btn btn-primary text-white" value="Update">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div><!--//app-card-->
                </div><!--//col-->
            </div>
        </div>
      </div>
      <!--//app-content-->

    <%- include ("./partials/_footer") %>
  </body>
</html>
