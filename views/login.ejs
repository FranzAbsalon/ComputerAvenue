<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/_head") %>
    <title>Ecommerce: Login</title>
    <link rel="icon" href="../public/imgs/nodejs-logo.png" />
    <link href="/public/css/main.css" rel="stylesheet" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include ("./partials/_nav") %>
    <section style="background-color: #ffffff">
      <div class="container h-100 py-2">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div
              class="card text-black"
              style="border: 1px solid #d8d8db; border-radius: 25px"
            >
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-7 order-2 order-lg-1">
                    <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                    <form class="mx-1 mx-md-4" method="POST">
                      <% if ( typeof (alert) != "undefined" && alert) { %>
                      <div
                        class="alert alert-danger alert-dismissible fade show"
                        role="alert"
                      >
                        <%= alert %>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="alert"
                          aria-label="Close"
                        ></button>
                      </div>
                      <% } %>
                      <% if ( typeof (validation) != "undefined" && validation) { %>
                        <% validation.forEach(valid => { %>
                        <div
                          class="alert alert-danger alert-dismissible fade show"
                          role="alert"
                        >
                            Account deactivated: <%= valid.d_remarks %>
                            <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="alert"
                            aria-label="Close"
                            >
                          </button>
                        </div>
                          <% }); %>
                        <% } %>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="email"
                            name="uname"
                            id="uname"
                            class="form-control"
                            required
                            style="border-bottom: 1px solid #bdbcbc"
                          />
                          <label class="form-label" for="uname"
                            >Your Email</label
                          >
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="password"
                            name="pwd"
                            id="pwd"
                            minlength="6"
                            class="form-control"
                            required
                            style="border-bottom: 1px solid #bdbcbc"
                          />
                          <label class="form-label" for="pwd">Password</label>
                        </div>
                      </div>

                      <div
                        class="d-flex justify-content-center mx-4 mb-3 mb-lg-4"
                      >
                        <input
                          type="submit"
                          class="btn btn-dark btn-lg btn-block"
                          value="Login"
                        />
                      </div>
                      <p class="mb-5 pb-lg-2" style="color: #393f81">
                        Don't have an account?
                        <a href="/register" style="color: #393f81">
                          <strong>Register here</strong>
                        </a>
                      </p>
                    </form>
                  </div>
                  <div
                    class="col-md-10 col-lg-6 col-xl-5 d-flex align-items-center order-1 order-lg-2"
                  >
                    <img
                      src="https://storyset.com/illustration/computer-login/rafiki"
                      class="img-fluid"
                      alt="Sample image"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include ("./partials/_footer") %>
  </body>
</html>
