<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Ecommerce: Account</title>
    <link rel="icon" href="../../public/imgs/nodejs-logo.png" />
    <%- include ("./includes/_head") %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body class="app">
    <%- include ("./includes/_nav") %>
    <div class="app-wrapper">
      <div class="app-content container pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
          <h1 class="app-page-title">Account Settings</h1>
            <div class="row gy-4">
                <div class="col-12 col-lg-12">
                    <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
                        <div class="app-card-header p-3 border-bottom-0">
                            <div class="row align-items-center gx-3">
                                <div class="col-auto">
                                    <div class="app-icon-holder">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                                        </svg>
                                    </div><!--//icon-holder-->
                                    
                                </div><!--//col-->
                                <div class="col-auto">
                                    <h4 class="app-card-title">Profile</h4>
                                </div><!--//col-->
                            </div><!--//row-->
                        </div><!--//app-card-header-->
                        <div class="app-card-body px-4 w-100">
                            <% if ( typeof (alert) != "undefined" && alert) { %>
                               <div
                                class="alert alert-danger alert-dismissible w-100 fade show"
                                role="alert"
                                >
                                    <%= alert %>
                                <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="alert"
                                    aria-label="Close"
                                    >
                                    </button>
                                </div>
                            <% } %>
                            <% if ( typeof (alertSuccess) != "undefined" && alertSuccess) { %>
                                <div
                                    class="alert alert-success alert-dismissible w-100 fade show"
                                    role="alert"
                                >
                                    <%= alertSuccess %>
                                    <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="alert"
                                    aria-label="Close"
                                    >
                                    </button>
                                </div>
                            <% } %>
                            <% if (typeof (result) != "undefined") { %>
                                <% result.forEach(r => { %>
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Admin Name</strong></div>
                                                <div class="item-data"><%= r.admin_name %></div>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Email</strong></div>
                                                <div class="item-data"><%= r.admin_email %></div>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                    <div class="item border-bottom py-3">
                                        <div class="row justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <div class="item-label"><strong>Encrypted Password</strong></div>
                                                <div class="item-data">
                                                    <%= r.admin_pwd %>
                                                </div>
                                            </div><!--//col-->
                                            <div class="col text-end">
                                                <a 
                                                    class="btn-sm app-btn-secondary"  
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#changePassword<%= r.admin_id %>"
                                                    style="cursor: pointer;">
                                                Change Password
                                                </a>
                                            </div><!--//col-->
                                        </div><!--//row-->
                                    </div><!--//item-->
                                </div><!--//app-card-body-->
                                <div class="app-card-footer p-4 mt-auto">
                                </div><!--//app-card-footer-->
                                <div
                                    class="modal fade"
                                    id="changePassword<%= r.admin_id %>"
                                    tabindex="-1"
                                    aria-labelledby="changePasswordLabel"
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="changePasswordLabel">
                                                Change Password: 
                                            </h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"
                                            ></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" class="w-100">
                                                <input type="hidden" name="admin_id" value="<%= r.admin_id %>">
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="cur_pwd"
                                                    name="cur_pwd"
                                                    />
                                                    <label for="cur_pwd">Current Password</label>
                                                </div>
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="new_pwd"
                                                    name="new_pwd"
                                                    minlength="6"
                                                    />
                                                    <label for="new_pwd">New Password</label>
                                                </div>
                                                <div class="form-floating mb-3 w-100">
                                                    <input
                                                    type="password"
                                                    class="form-control"
                                                    id="con_new_pwd"
                                                    name="con_new_pwd"
                                                    minlength="6"
                                                    />
                                                    <label for="con_new_pwd">Confirm New Password</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    Close
                                                </button>
                                                <input type="submit" name="update" class="btn btn-primary text-white" value="Update">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div><!--//app-card-->
                </div><!--//col-->
            </div>
            <!--//row-->
            <footer class="app-footer">
                <div class="container text-center py-3 shadow-sm border" style="background-color: rgba(0, 0, 0, 0.2);">
                <!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
                    <small class="text-dark">
                        Copyright © 2022 
                    </small>
                </div>
            </footer>
            <!--//app-footer-->
        </div>
      </div>
      <!--//app-content-->

    <%- include ("./includes/_footer") %>
  </body>
</html>
